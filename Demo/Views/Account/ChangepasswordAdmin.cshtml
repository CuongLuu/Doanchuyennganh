@using Demo.Models
@{
    ViewBag.Title = "ChangepasswordAdmin";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Header -->
<!-- Header -->
<div class="header pb-6 d-flex align-items-center" style="min-height: 150px; background-image: url(/Content/images/bg.jpg); background-size: cover; background-position: center top;">
    <!-- Mask -->
    <span class="mask bg-gradient-default opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
        <div class="row">
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-4 order-xl-2">
        </div>
        <div class="col-xl-8 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Đổi mật khẩu</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Session["AccountAdmin"] != null)
                    {
                        Admin e = (Admin)Session["AccountAdmin"];
                        using (Html.BeginForm("ChangepasswordAdmin", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="tittle">Mật khẩu cũ</label>
                                            @Html.Password("oldPass", "", new { required = "required", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="tittle">Mật khẩu mới</label>
                                            @Html.TextBox("newPass", "", new { required = "required", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="tittle">Nhập lại mật khẩu mới</label>
                                            @Html.TextBox("reNewPass", "", new { required = "required", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" id="submit" class="btn btn-primary my-4" value="OK" />
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

