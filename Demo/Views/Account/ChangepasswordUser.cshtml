@using Demo.Models
@{
    ViewBag.Title = "ChangepasswordUser";
    Layout = "~/Views/Shared/_Layoutchinh.cshtml";
}

<div class="page-header mb-0">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2>Đổi mật khẩu</h2>
            </div>
            <div class="col-12">
                <a href="@Url.Action("Index", "Home")">Trang chủ</a>
                <a href="">Menu</a>
            </div>
        </div>
    </div>
</div>

<!-- Page content -->
<div class="container-fluid mt--6" style="margin-top: 50px">
    <div class="row">
        <div class="col-xl-4 order-xl-2">

        </div>
        <div class="col-xl-8 order-xl-1">
            <div class="card">
                <div class="card-header" style="background-color:orange">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0" style="color: white">Đổi mật khẩu</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    @if (Session["Account"] != null)
                    {
                        NguoiDung e = (NguoiDung)Session["Account"];
                        using (Html.BeginForm("ChangepasswordUser", "Account", FormMethod.Post, new { enctype = "multipart/form-data" }))
                        {
                            @Html.AntiForgeryToken()
                            <div class="pl-lg-4">
                                <div class="row">
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="tittle">Mật khẩu cũ</label>
                                            @Html.Password("oldPass", "", new { required = "required", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="tittle">Mật khẩu mới</label>
                                            @Html.TextBox("newPass", "", new { required = "required", @class = "form-control" })
                                        </div>
                                    </div>
                                    <div class="col-lg-12">
                                        <div class="form-group">
                                            <label class="form-control-label" for="tittle">Nhập lại mật khẩu mới</label>
                                            @Html.TextBox("reNewPass", "", new { required = "required", @class = "form-control" })
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <input type="submit" id="submit" class="btn btn-primary my-4" value="OK" />
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</div>

