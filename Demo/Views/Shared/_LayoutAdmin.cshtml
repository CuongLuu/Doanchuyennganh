
@using Demo.Models
@{
    Layout = null;
}

<!DOCTYPE html>
<html>

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Start your development with a Dashboard for Bootstrap 4.">
    <meta name="author" content="Creative Tim">
    <title>CHN FastFood | AdminManage</title>
    <!-- Favicon -->
    <link rel="icon" href="~/Content/Admin/assets/img/brand/favicon.png" type="image/png">

    <!-- Fonts -->
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Open+Sans:300,400,600,700">
    <!-- Icons -->
    <link rel="stylesheet" href="~/Content/Admin/assets/vendor/nucleo/css/nucleo.css" type="text/css">
    <link rel="stylesheet" href="~/Content/Admin/assets/vendor/fortawesome/fontawesome-free/css/all.min.css" type="text/css">
    <!-- Page plugins -->
    <!-- Argon CSS -->
    <link rel="stylesheet" href="~/Content/Admin/assets/css/argon.css?v=1.2.0" type="text/css">
    <script src="~/Scripts/Scripts.js"></script>
</head>

<body>
    <!-- Sidenav -->
    <nav class="sidenav navbar navbar-vertical  fixed-left  navbar-expand-xs navbar-light bg-white" id="sidenav-main">
        <div class="scrollbar-inner">
            <!-- Brand -->
            <div class="sidenav-header  align-items-center">
                <a class="navbar-brand" href="javascript:void(0)">
                    <img src="~/Content/Admin/assets/img/brand/admin.png" class="navbar-brand-img" alt="...">

                </a>
            </div>
            <div class="navbar-inner">
                <!-- Collapse -->
                <div class="collapse navbar-collapse" id="sidenav-collapse-main">
                    <!-- Nav items -->
                    <ul class="navbar-nav">
                        <li class="nav-item">
                            <a class="nav-link active" href="@Url.Action("AdminManage","Admin")">
                                <i class="ni ni-tv-2 text-primary"></i>
                                <span class="nav-link-text">AdminManage</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","DonHang")">
                                <i class="ni ni-bullet-list-67 text-default"></i>
                                <span class="nav-link-text">Quản lý đơn hàng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","Product")">
                                <i class="ni ni-ruler-pencil text-info"></i>
                                <span class="nav-link-text">Sản phẩm</span>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("ListDuyet","Product")">
                                <i class="ni ni-check-bold"></i>
                                <span class="nav-link-text">Duyệt bài</span>
                            </a>

                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","CuaHang")">
                                <i class="ni ni-shop"></i>
                                <span class="nav-link-text">Cửa hàng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Index","NguoiDung")">
                                <i class="ni ni-single-02 text-purple"></i>
                                <span class="nav-link-text">Người dùng</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("List","Admin")">
                                <i class="ni ni-circle-08 text-pink"></i>
                                <span class="nav-link-text">Nhân viên</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Active","Admin")">
                                <i class="ni ni-key-25 text-yellow"></i>
                                <span class="nav-link-text">Kích hoạt</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="@Url.Action("Decentralization","Admin")">
                                <i class="ni ni-key-25 text-black-50"></i>
                                <span class="nav-link-text">Phân quyền</span>
                            </a>
                        </li>

                    </ul>
                    <!-- Divider -->
                    <hr class="my-3">
                    <!-- Heading -->

                </div>
            </div>
        </div>
    </nav>
    <!-- Main content -->
    <div class="main-content" id="panel">
        <!-- Topnav -->
        <nav class="navbar navbar-top navbar-expand navbar-dark bg-primary border-bottom">
            <div class="container-fluid">
                <div class="collapse navbar-collapse" id="navbarSupportedContent">
                    <!-- Search form -->
                    <form class="navbar-search navbar-search-light form-inline mr-sm-3" id="navbar-search-main">
                        <div class="form-group mb-0">
                            <div class="input-group input-group-alternative input-group-merge">
                              
                                
                            </div>
                        </div>
                        <button type="button" class="close" data-action="search-close" data-target="#navbar-search-main" aria-label="Close">
                            <span aria-hidden="true">×</span>
                        </button>
                    </form>
                    <!-- Navbar links -->
                    <ul class="navbar-nav align-items-center  ml-md-auto ">
                        <li class="nav-item d-xl-none">
                            <!-- Sidenav toggler -->
                            <div class="pr-3 sidenav-toggler sidenav-toggler-dark" data-action="sidenav-pin" data-target="#sidenav-main">
                                <div class="sidenav-toggler-inner">
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                    <i class="sidenav-toggler-line"></i>
                                </div>
                            </div>
                        </li>
                        <li class="nav-item d-sm-none">
                            <a class="nav-link" href="#" data-action="search-show" data-target="#navbar-search-main">
                                <i class="ni ni-zoom-split-in"></i>
                            </a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <i class="ni ni-bell-55"></i>
                            </a>
                            <div class="dropdown-menu dropdown-menu-xl  dropdown-menu-right  py-0 overflow-hidden">
                                <!-- Dropdown header -->
                                <div class="px-3 py-3">
                                    <h6 class="text-sm text-muted m-0">You have <strong class="text-primary">13</strong> notifications.</h6>
                                </div>
                                
                                <!-- View all -->
                                <a href="#!" class="dropdown-item text-center text-primary font-weight-bold py-3">View all</a>
                            </div>
                        </li>

                    </ul>
                    <ul class="navbar-nav align-items-center  ml-auto ml-md-0 ">
                        <li class="nav-item dropdown">
                            <a class="nav-link pr-0" href="#" role="button" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                <div class="media align-items-center">
                                    @if (Session["AccountAdmin"] != null)
                                    {

                                        Admin e = (Admin)Session["AccountAdmin"];
                                        <span class="avatar avatar-sm rounded-circle">
                                            <img src="@e.anh">
                                        </span>
                                        <div class="media-body  ml-2  d-none d-lg-block">
                                            <span class="mb-0 text-sm  font-weight-bold">@e.ten</span>
                                        </div>
                                    }
                                    else
                                    {
                                        <a href="@Url.Action("LoginAdmin", "Account")" class="nav-item nav-link">Đăng nhập</a>
                                    }
                                </div>
                            </a>
                            <div class="dropdown-menu  dropdown-menu-right ">
                                <div class="dropdown-header noti-title">
                                    <h6 class="text-overflow m-0">Xin chào!</h6>
                                </div>
                                @if (Session["AccountAdmin"] != null)
                                {

                                    Admin e = (Admin)Session["AccountAdmin"];
                                    <a href="@Url.Action("ProfileAdmin", "Home",new { id = e.idAdmin })" class="dropdown-item">
                                        <i class="ni ni-single-02"></i>
                                        <span>Thông tin của tôi</span>
                                    </a>
                                    <a href="@Url.Action("EditProfileAdmin","Home",new { id=e.idAdmin })" class="dropdown-item">
                                        <i class="ni ni-calendar-grid-58"></i>
                                        <span>Cập nhật thông tin</span>
                                    </a>
                                    <a href="@Url.Action("ChangepasswordAdmin","Account",new { id=e.idAdmin })" class="dropdown-item">
                                        <i class="ni ni-settings-gear-65"></i>
                                        <span>Đổi mật khẩu</span>
                                    </a>

                                    @*<a href="#!" class="dropdown-item">
                                            <i class="ni ni-support-16"></i>
                                            <span>Support</span>
                                        </a>*@
                                    <div class="dropdown-divider"></div>
                                    <a href="@Url.Action("LogoutAdmin", "Account")" class="dropdown-item">
                                        <i class="ni ni-user-run"></i>
                                        <span>Đăng xuất</span>
                                    </a>
                                }
                                
                            </div>

                        </li>
                    </ul>
                </div>
            </div>
        </nav>

        @RenderBody()
    </div>
    <!-- Argon Scripts -->
    <!-- Core -->
    <script src="~/Content/Admin/assets/vendor/jquery/dist/jquery.min.js"></script>
    <script src="~/Content/Admin/assets/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/Content/Admin/assets/vendor/js-cookie/js.cookie.js"></script>
    <script src="~/Content/Admin/assets/vendor/jquery.scrollbar/jquery.scrollbar.min.js"></script>
    <script src="~/Content/Admin/assets/vendor/jquery-scroll-lock/dist/jquery-scrollLock.min.js"></script>
    <!-- Optional JS -->
    <script src="~/Content/Admin/assets/vendor/chart.js/dist/Chart.min.js"></script>
    <script src="~/Content/Admin/assets/vendor/chart.js/dist/Chart.extension.js"></script>
    <!-- Argon JS -->
    <script src="~/Content/Admin/assets/js/argon.js?v=1.2.0"></script>
    @*ckfinder*@
    <script src="~/Content/Admin/ckfinder/ckfinder.js"></script>
    @*ckeditor*@
    <script src="~/Content/Admin/ckeditor/ckeditor.js"></script>
    <script src="~/Content/ScriptImg.js"></script>
    @RenderSection("jsFooter", required: false);
    @*paginate*@
    <link href="~/Content/Admin/assets/css/stylePaginate.css" rel="stylesheet" />
    @*datepicker*@
    <script src="~/Content/Admin/assets/vendor/moment.min.js"></script>
    <script src="~/Content/Admin/assets/vendor/bootstrap-datetimepicker.js"></script>
    <script src="~/Content/Admin/datepicker.js"></script>
</body>

</html>
