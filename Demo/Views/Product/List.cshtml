@using Demo.Models
@using PagedList.Mvc;
@model PagedList.PagedList<SanPham>
@{ ViewBag.Title = "List";
                Layout = "~/Views/Shared/_LayoutAdmin.cshtml";}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Danh sách sản phẩm</h6>

                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">

            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">

                    <a href="/Product/Create" class="btn btn-round btn-primary"><i class="fas fa-plus-circle"></i></a>
                </div>
                @using (Html.BeginForm("List", "Product", FormMethod.Get)) 
                { 
          
                }
                    

                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col" class="sort" data-sort="budget">Tên Sản Phẩm</th>
                                <th scope="col" class="sort" data-sort="budget">Giá </th>
                                <th scope="col" class="sort" data-sort="budget">Hình ảnh </th>
                                <th scope="col" class="sort" data-sort="budget">Cửa hàng </th>
                                <th scope="col" class="sort" data-sort="status">Trạng thái</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var i in Model)
                            {
                <tr>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.maSP</span>
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.tenSP</span>
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.gia</span> VNĐ
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <img style="height:75px;width:75px" alt="Image news" src="~/Content/Template/img/@i.hinhanh">
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.Cuahang.tenCH</span>
                        </div>
                    </td>
                    <td>
                        @*status*@
                        <span class="badge badge-dot mr-4">
                            @if (i.status == 3)
                            {
            <i class="bg-warning"></i>
                                <span class="status">Xóa</span> }
                            else if (i.status == 1)
                            {
            <i class="bg-success"></i>
                                <span class="status">Hiển thị</span> }
                            else if (i.status == 2)
                            {


            <i class="bg-info"></i><span class="status">Ẩn</span> }
        else
        { @*status = 0*@
                                <i class="bg-info"></i>
                                                    <span class="status">Đợi duyệt</span>}

                        </span>
                    </td>
                    <td class="text-right">
                        <a href="@Url.Action("Details","Product",new { id= @i.maSP })" class="btn btn-sm btn-neutral"><i class="fas fa-eye"></i></a>
                        <a href="@Url.Action("Edit","Product",new { id= @i.maSP })" class="btn btn-sm btn-neutral"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Delete","Product",new { id= @i.maSP })" class="btn btn-sm btn-neutral"><i class="fas fa-minus-circle"></i></a>

                    </td>
                </tr>}
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">

                </div>
            </div>
        </div>
    </div>
</div>
<!-- Card footer -->
