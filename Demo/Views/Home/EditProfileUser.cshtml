<body class="theme-red">

    <!-- Back to top button -->
    <div class="btn-back_to_top">
        <span class="ti-arrow-up"></span>
    </div>

    <!-- Setting button -->
    <div class="config">
        <div class="template-config">
            <!-- Settings -->
            <div class="d-block">
                <button class="btn btn-fab btn-sm" id="sideel" title="Settings"><span class="ti-settings"></span></button>
            </div>
            <!-- Puschase -->
            <div class="d-block">
                <a href="https://macodeid.com/projects/virtual-folio/" class="btn btn-fab btn-sm" title="Get this template" data-toggle="tooltip" data-placement="left"><span class="ti-download"></span></a>
            </div>
            <!-- Help -->
            <div class="d-block">
                <a href="#" class="btn btn-fab btn-sm" title="Help" data-toggle="tooltip" data-placement="left"><span class="ti-help"></span></a>
            </div>
        </div>
        <div class="set-menu">
            
        </div>
    </div>
    <div class="carousel">
        <div class="owl-carousel">
            <div class="vg-page page-home" alt="Image" id="home" style="background-image: url(/Content/assets/img/bg_image_1.jpg); margin-bottom: 100px">
                @if (Session["Account"] != null)
                {

                    NguoiDung u = (NguoiDung)Session["Account"];
                    <div class="caption-header text-center wow zoomInDown">
                        <h5 class="fw-normal">Xin Chào</h5>
                        <h1 class="fw-light mb-4">I'm <b class="fg-theme">@u.tenND</b> !!!</h1>
                        <div class="badge">Một số thông tin của bạn</div>
                    </div> <!-- End Caption header -->
                    <div class="floating-button"><span class="ti-mouse"></span></div>
                }
            </div>
        </div>
    </div>
    <div class="floating-button"><span class="ti-mouse"></span></div>
    <div class="container py-5" style="margin-top: -200px">
        @using (Html.BeginForm("EditProfileUser", "Home", FormMethod.Post, new { enctype = "multipart/form-data" }))
        {
            @Html.AntiForgeryToken()
            <div class="row">
                <div class="col-lg-4 py-3">
                    <div class="carousel">
                        <div class="owl-carousel">
                            <div class="img-place wow fadeInUp">
                                <img src="~/Image/ImageUpload/@Model.anh" id="previewImage" />
                                @Html.TextBox("ImageUpload", "Chọn ảnh", new { type = "file", accept = ".jpg,.png,.jpeg,.gif", @class = "form-control", @onchange = "ShowImagePreview(this,document.getElementById('previewImage'))" })

                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-lg-6 offset-lg-1 wow fadeInRight">
                    <div class="col-lg-12">
                        <div class="form-group">
                            @Html.TextBoxFor(m => m.ngaysua, new { @type = "hidden" })
                            @Html.TextBoxFor(m => m.matkhau, new { @type = "hidden" })
                            @Html.TextBoxFor(m => m.status, new { @type = "hidden" })
                            @Html.TextBoxFor(m => m.ngaytao, new { @type = "hidden" })
                            @Html.TextBoxFor(m => m.maND, new { @type = "hidden" })
                            <label class="form-control-label" for="tittle">Họ và tên</label>
                            @Html.TextBoxFor(m => m.tenND, new { required = "required", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Giới tính</label>
                            @{
                                List<SelectListItem> listItems = new List<SelectListItem>();
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Nam",
                                    Value = "0"
                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Nữ",
                                    Value = "1",

                                });
                                listItems.Add(new SelectListItem
                                {
                                    Text = "Khác",
                                    Value = "2",

                                });

                            }

                            @Html.DropDownListFor(model => model.gioitinh, listItems, "", new { @class = "form-control" })
                        </div>

                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-control-label">Ngày sinh</label>
                            @Html.EditorFor(m => m.ngaysinh, new { htmlAttributes = new { required = "required", @class = "form-control datepicker" } })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Số điện thoại</label>
                            @Html.TextBoxFor(m => m.sdt, new { required = "required", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-6">
                        <div class="form-group">
                            <label class="form-control-label">Email</label>
                            @Html.TextBoxFor(m => m.email, new { required = "required", @class = "form-control" })
                        </div>
                    </div>
                    <div class="col-lg-12">
                        <div class="form-group">
                            <label class="form-control-label" for="input-email">Địa chỉ</label>
                            @Html.TextBoxFor(m => m.diachi, new { required = "required", @class = "form-control" })

                        </div>
                    </div>
                    <div class="text-center">
                        <input type="submit" id="submit" class="btn btn-primary my-4" value="Lưu" />
                        <a class="btn btn-secondary my-4" href="#">Hủy</a>
                    </div>
                </div>
            </div>
         }
    </div>
</body>
