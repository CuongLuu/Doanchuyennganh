@using Demo.Models
@model List<Demo.Models.SanPham>
@{
    ViewBag.Title = "HomeOfAuthor";
    Layout = "~/Views/Shared/_LayoutShopmanager.cshtml";
}

<!-- Header -->
<!-- Header -->
<div class="header pb-6 d-flex align-items-center" style="min-height: 500px; background-image: url(/Content/images/bg.jpg); background-size: cover; background-position: center top;">
    <!-- Mask -->
    <span class="mask bg-gradient-default opacity-8"></span>
    <!-- Header container -->
    <div class="container-fluid d-flex align-items-center">
        <div class="row">
            <div class="col-lg-7 col-md-10">
                @if (Session["AccountAuthor"] != null)
                {

                    Admin u = (Admin)Session["AccountAuthor"];
                    <h1 class="display-2 text-white">Hello @u.ten</h1>
                    <p class="text-white mt-0 mb-5">
                        Đây là trang dành cho tác giả. Bạn có thể theo dõi các bài viết xem nhiều ở bên dưới và tạo bài viết mới khi nhấn vào nút dưới đây.
                    </p>
                    <a href="@Url.Action("AuthorAddNews","News")" class="btn btn-neutral"> Viết bài</a>
                }
            </div>
        </div>
    </div>
</div>
<!-- Page content -->
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col-xl-4 order-xl-2">
            <div class="card card-profile">
                @if (Session["AccountAuthor"] != null)
                {

                    Admin u = (Admin)Session["AccountAuthor"];
                    <img src="~/Content/assets/img/theme/img-1-1000x600.jpg" alt="Image placeholder" class="card-img-top">
                    <div class="row justify-content-center">
                        <div class="col-lg-3 order-lg-2">
                            <div class="card-profile-image">
                                <a href="#">
                                    <img src="~/UploadedFiles/images/@u.anh" class="rounded-circle">
                                </a>
                            </div>
                        </div>
                    </div>
                    <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                        <div class="d-flex justify-content-between">
                            <a href="#" class="btn btn-sm btn-info  mr-4 ">Connect</a>
                            <a href="#" class="btn btn-sm btn-default float-right">Message</a>
                        </div>
                    </div>
                    <div class="card-body pt-0">
                        <div class="text-center">
                            <h5 class="h3">
                                @u.ten<span class="font-weight-light">, 21</span>
                            </h5>
                            <div class="h5 font-weight-300">
                                <i class="ni location_pin mr-2"></i>@u.ngaysinh
                            </div>
                            <div class="h5 mt-4">
                                <i class="ni business_briefcase-24 mr-2"></i>@u.sdt
                            </div>
                            <div>
                                <i class="ni education_hat mr-2"></i>@u.email
                            </div>
                        </div>
                    </div>

                }
            </div>
        </div>
        <div class="col-xl-8 order-xl-1">
            <div class="card">
                <div class="card-header">
                    <div class="row align-items-center">
                        <div class="col-12">
                            <h3 class="mb-0">Các sản phẩm</h3>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table align-items-center table-flush">
                            <thead class="thead-light">
                                <tr>
                                    <th scope="col">Hình ảnh</th>
                                    <th scope="col" class="sort" data-sort="name">Tên sản phẩm</th>
                                    <th scope="col" class="sort" data-sort="budget">Thể loại</th>
                                    <th scope="col">Cửa hàng</th>
                                    <th scope="col">Giá</th>
                                    <th scope="col"></th>
                                </tr>
                            </thead>
                            <tbody class="list">
                                @foreach (var i in Model)
                                {
                                    <tr>

                                        <th scope="row">
                                            <div class="media align-items-center">
                                                <a href="#" class="avatar rounded-circle mr-3">
                                                    <img alt="Image news" src="~/Content/Template/img/@i.hinhanh">
                                                </a>

                                            </div>
                                        </th>
                                        <td class="budget">
                                            @i.tenSP
                                        </td>
                                        @*category*@
                                        <td class="budget">
                                            @i.LoaiSP.tenLoaiSP
                                        </td>
                                        <td class="budget">
                                            @i.Cuahang.tenCH
                                        </td>
                                        @*view*@
                                        <td class="budget">
                                            @i.gia
                                        </td>
                                        <td class="text-right">
                                            <a href="@Url.Action("DetailsUser","Product",new { id= @i.maSP })" class="btn btn-sm btn-neutral"><i class="fas fa-eye"></i></a>

                                        </td>


                                    </tr>

                                }
                            </tbody>
                        </table>
                    </div>
                    <!-- Card footer -->
                    <div class="card-footer py-4">
                        <nav aria-label="...">
                            <ul class="pagination justify-content-end mb-0">
                                <li class="page-item disabled">
                                    <a class="page-link" href="#" tabindex="-1">
                                        <i class="fas fa-angle-left"></i>
                                        <span class="sr-only">Previous</span>
                                    </a>
                                </li>
                                <li class="page-item active">
                                    <a class="page-link" href="#">1</a>
                                </li>
                                <li class="page-item">
                                    <a class="page-link" href="#">2 <span class="sr-only">(current)</span></a>
                                </li>
                                <li class="page-item"><a class="page-link" href="#">3</a></li>
                                <li class="page-item">
                                    <a class="page-link" href="#">
                                        <i class="fas fa-angle-right"></i>
                                        <span class="sr-only">Next</span>
                                    </a>
                                </li>
                            </ul>
                        </nav>
                    </div>
                </div>
            </div>
        </div>
    </div>


