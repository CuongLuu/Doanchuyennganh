@model IEnumerable<Demo.Models.Donhang>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Danh sách đơn hàng</h6>

                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">

                    <a href="/Donhang/Create" class="btn btn-round btn-primary"><i class="fas fa-plus-circle"></i></a>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col" class="sort" data-sort="budget">Mã hóa đơn</th>

                                <th scope="col" class="sort" data-sort="budget">Cửa hàng </th>
                                <th scope="col" class="sort" data-sort="budget">Người mua </th>
                                <th scope="col" class="sort" data-sort="budget">Tiến độ </th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var i in Model)
                            {
                                <tr>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.maDH</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.maHD</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.Cuahang.tenCH</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.NguoiDung.tenND</span>
                                        </div>
                                    </td>
                                    <td>
                                        <div class="media-body">
                                            <span class="name mb-0 text-sm">@i.tiendo</span>
                                        </div>
                                    </td>

                                    <td>
                                        @*status*@

                                    </td>
                                    <td class="text-right">
                                        <a href="@Url.Action("Details","DonHang",new { id= @i.maDH })" class="btn btn-sm btn-neutral"><i class="fas fa-eye"></i></a>
                                        <a href="@Url.Action("Edit","DonHang",new { id= @i.maDH })" class="btn btn-sm btn-neutral"><i class="fas fa-edit"></i></a>
                                        <a href="@Url.Action("Delete","DonHang",new { id= @i.maDH })" class="btn btn-sm btn-neutral"><i class="fas fa-minus-circle"></i></a>

                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">

                </div>
            </div>
        </div>
    </div>
</div>
