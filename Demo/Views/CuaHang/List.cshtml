@using Demo.Models
@using PagedList.Mvc;
@model PagedList.PagedList<Cuahang>
@{ ViewBag.Title = "List";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml"; }

<div class="header bg-primary pb-6">
    <div class="container-fluid">
        <div class="header-body">
            <div class="row align-items-center py-4">
                <div class="col-lg-6 col-7">
                    <h6 class="h2 text-white d-inline-block mb-0">Danh sách cửa hàng</h6>

                </div>
                <div class="col-lg-6 col-5 text-right">
                    <a href="#" class="btn btn-sm btn-neutral"><i class="fas fa-trash"></i></a>
                </div>
            </div>
        </div>
    </div>
</div>
<div class="container-fluid mt--6">
    <div class="row">
        <div class="col">
            <div class="card">
                <!-- Card header -->
                <div class="card-header border-0">

                    <a href="/CuaHang/Create" class="btn btn-round btn-primary"><i class="fas fa-plus-circle"></i></a>
                </div>
                <!-- Light table -->
                <div class="table-responsive">
                    <table class="table align-items-center table-flush">
                        <thead class="thead-light">
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col" class="sort" data-sort="budget">Tên cửa hàng</th>
                                <th scope="col" class="sort" data-sort="budget">Địa chỉ </th>
                                <th scope="col" class="sort" data-sort="budget">Email </th>
                                <th scope="col" class="sort" data-sort="budget">SĐT </th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody class="list">
                            @foreach (var i in Model)
                            {
                <tr>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.maCH</span>
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.tenCH</span>
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.diachi</span>
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.email</span>
                        </div>
                    </td>
                    <td>
                        <div class="media-body">
                            <span class="name mb-0 text-sm">@i.sdt</span>
                        </div>
                    </td>

                    <td>
                        @*status*@

                    </td>
                    <td class="text-right">
                        <a href="@Url.Action("Details","CuaHang",new { id= @i.idAdmin })" class="btn btn-sm btn-neutral"><i class="fas fa-eye"></i></a>
                        <a href="@Url.Action("Edit","CuaHang",new { id= @i.idAdmin })" class="btn btn-sm btn-neutral"><i class="fas fa-edit"></i></a>
                        <a href="@Url.Action("Delete","CuaHang",new { id= @i.idAdmin })" class="btn btn-sm btn-neutral"><i class="fas fa-minus-circle"></i></a>

                    </td>
                </tr>
}
                        </tbody>
                    </table>
                </div>
                <!-- Card footer -->
                <div class="card-footer py-4">

                </div>
            </div>
        </div>
    </div>
</div>
